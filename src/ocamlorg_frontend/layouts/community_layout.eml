type section =
  | Overview
  | Ocaml_in_numbers
  | Jobs
  | Events
  | Resources

let tabs
~current =
  let url_of_section = function
    | Overview -> Url.community
    | Ocaml_in_numbers -> Url.ocaml_in_numbers
    | Jobs -> Url.jobs
    | Events -> Url.events
    | Resources -> Url.resources
  in
  let title_of_section = function
    | Overview -> "Overview"
    | Ocaml_in_numbers -> "OCaml In Numbers"
    | Jobs -> "Jobs"
    | Events -> "Events"
    | Resources -> "Resources"
  in
  Layout.subnav_tabs ~title:"Community" ~current ~sections:[Overview; Ocaml_in_numbers; Jobs; Events; Resources] ~url_of_section ~title_of_section

let single_column_layout
?use_swiper
?use_chartjs
?styles
~title
~description
~canonical
~current
inner_html
=
  Layout.render
  ?use_swiper
  ?use_chartjs
  ?styles
  ~title
  ~description
  ~canonical
  ~active_top_nav_item:Community @@
  <%s! tabs ~current %>
  <div class="bg-background dark:bg-dark-background">
    <div class="flex-1 z-0 z- min-w-0 pb-12">
      <%s! inner_html %>
    </div>
  </div>
